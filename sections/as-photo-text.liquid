<section class="as-feature">
  <div class="as-feature__container container--large container--with-aside-paddings">
    <h2 class="as-feature__title">
      {{ section.settings.heading }}
    </h2>

    <p class="as-text as-feature__subtitle">
      {{ section.settings.subheading }}
    </p>

    {% if section.settings.image %}
      <div class="as-feature__image-wrap">
        <img
          src="{{ section.settings.image | image_url: width: 2000 }}"
          alt="Feature image"
          class="as-feature__image"
          loading="lazy"
        >
      </div>
    {% endif %}

    <p class="as-text as-feature__bottom-text">
      {{ section.settings.bottom_text }}
    </p>
  </div>
</section>

<style>
  .as-feature {
    padding: 80px 0 72px;
    color: white;
  }

  .as-feature__container {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .as-feature__title {
    font-size: 4.8rem;
    font-weight: 700;
    margin: 0 0 18px;
    font-family: 'Montserrat', sans-serif;
    line-height: 1.2;
    color: #ffffff;
    letter-spacing: -1px;
  }

  .as-text {
    font-size: 2rem;
    font-weight: 500;
    margin: 0 0 48px;
    opacity: 0.9;
    line-height: 1.6;
    letter-spacing: -1px;
    font-family: 'Montserrat', sans-serif;
  }

  .as-feature__image-wrap {
    margin: 0 auto 40px;
    max-width: 1000px;
  }

  .as-feature__image {
    width: 100%;
    border-radius: 18px;
    display: block;
  }

  @media (max-width: 768px) {
    .as-feature {
      padding: 30px 0;
    }

    .as-feature__title {
      font-size: 2.5rem;
    }

    .as-feature__subtitle,
    .as-feature__bottom-text {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "AS — Feature",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Redefining What Strength<br>Training Measures"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtitle",
      "default": "Most fitness tools measure movement — step counts, motion patterns, or exercise logs. Olympus Grip SMART measures actual load, capturing the real force you apply across hundreds of calisthenic and resistance exercises."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main image"
    },
    {
      "type": "textarea",
      "id": "bottom_text",
      "label": "Bottom text",
      "default": "Finally, strength training has a metric as universal as steps, miles, or heart rate — but built for muscular performance."
    }
  ],
  "presets": [
    {
      "name": "AS Feature"
    }
  ]
}
{% endschema %}
