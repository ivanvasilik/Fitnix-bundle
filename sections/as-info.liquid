<style>
  .as-info {
    padding: 80px 0 72px;
  }
  .as-info__main {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: 16px;
    padding: 72px;
    background-color: #fff;
    border-radius: 24px;
  }
  .as-info__title {
    color: #003466;
    text-align: center;
    font-family: 'Montserrat', sans-serif;
    font-size: 24px;
    font-weight: 500;
    line-height: 1.4;
    max-width: 826px;
    margin: 0 auto;
  }
</style>

<div class="as-info__cont page-width">
  <div class="as-info__main">
    <h3 class="as-info__title">{{ section.settings.heading }}</h3>
  </div>
</div>

{% schema %}
{
  "name": "AS Info",
  "tag": "section",
  "class": "as-info",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    }
  ]
}
{% endschema %}
